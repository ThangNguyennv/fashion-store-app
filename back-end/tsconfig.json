{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es6",
        "module": "nodenext",
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}